{
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "game": "readonly",
    "canvas": "readonly",
    "ui": "readonly",
    "CONFIG": "readonly",
    "Hooks": "readonly",
    "foundry": "readonly",
    "pf1": "readonly",
    "Item": "readonly",
    "Actor": "readonly",
    "DocumentSheetConfig": "readonly",
    "libWrapper": "readonly",
    "RollPF": "readonly",
    "lang": "readonly"
  },
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "semi": ["error", "always"],
    "quotes": ["error", "double", { "avoidEscape": true }]
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parser": "@typescript-eslint/parser",
      "plugins": ["@typescript-eslint"],
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
      ]
    }
  ]
}
