<div class="augments-section">
  <header class="augments-header">
    <h2>{{localize "PF1-Psionics.Augments.Plural"}}</h2>
    <button type="button" class="add-augment" title="{{localize 'PF1-Psionics.Augments.Add'}}">
      <i class="fas fa-plus"></i> {{localize "PF1-Psionics.Augments.Add"}}
    </button>
  </header>

  {{#if augments.length}}
    <ol class="augments-list">
      {{#each augments}}
        <li class="augment-item" data-augment-id="{{this._id}}">
          <div class="augment-summary">
            <h4 class="augment-name">
              <i class="fas fa-magic"></i>
              {{this.name}}
              <span class="augment-cost">({{this.cost}} PP)</span>
            </h4>

            <div class="augment-controls">
              <button type="button" class="edit-augment" title="{{localize 'PF1-Psionics.Augments.Edit'}}">
                <i class="fas fa-edit"></i>
              </button>
              <button type="button" class="delete-augment" title="{{localize 'PF1-Psionics.Augments.Delete'}}">
                <i class="fas fa-trash"></i>
              </button>
            </div>
          </div>

          <div class="augment-details">
            {{#if this.description}}
              <p class="augment-description">{{this.description}}</p>
            {{/if}}

            {{#if this.hasEffects}}
              <div class="augment-effects">
                <strong>{{localize "PF1-Psionics.Augments.Effects.Label"}}:</strong>
                <ul class="effect-list">
                  {{#if this.effects.damageBonus}}
                    <li>{{localize "PF1.DamageBonus"}}: {{this.effects.damageBonus}}</li>
                  {{/if}}
                  {{#if (ne this.effects.damageMult 1)}}
                    <li>{{localize "PF1-Psionics.Augments.Effects.DamageMult"}}: ×{{this.effects.damageMult}}</li>
                  {{/if}}
                  {{#if (ne this.effects.durationMultiplier 1)}}
                    <li>{{localize "PF1-Psionics.Augments.Effects.DurationMult"}}: ×{{this.effects.durationMultiplier}}</li>
                  {{/if}}
                  {{#if (ne this.effects.dcBonus 0)}}
                    <li>{{localize "PF1.DCOffset"}}: +{{this.effects.dcBonus}}</li>
                  {{/if}}
                  {{#if (ne this.effects.clBonus 0)}}
                    <li>{{localize "PF1-Psionics.Augments.Effects.CLBonus"}}: +{{this.effects.clBonus}}</li>
                  {{/if}}
                  {{#if this.effects.special}}
                    <li>{{localize "PF1-Psionics.Augments.Effects.Special"}}: {{this.effects.special}}</li>
                  {{/if}}
                </ul>
              </div>
            {{/if}}

            {{#if this.hasConditions}}
              <div class="augment-conditions">
                <strong>{{localize "PF1-Psionics.Augments.Conditions.Label"}}:</strong>
                <ul class="condition-list">
                  {{#if (gt this.conditions.minLevel 0)}}
                    <li>{{localize "PF1-Psionics.Augments.Conditions.MinLevel"}}: {{this.conditions.minLevel}}</li>
                  {{/if}}
                  {{#if this.conditions.maxLevel}}
                    <li>{{localize "PF1-Psionics.Augments.Conditions.MaxLevel"}}: {{this.conditions.maxLevel}}</li>
                  {{/if}}
                  {{#if this.conditions.requiresCondition}}
                    <li>{{this.conditions.requiresCondition}}</li>
                  {{/if}}
                </ul>
              </div>
            {{/if}}

            {{#if this.requiresFocus}}
              <div class="augment-focus">
                <i class="fas fa-eye"></i> {{localize "PF1-Psionics.Augments.RequiresFocus"}}
              </div>
            {{/if}}

            {{#if this.maxUses}}
              <div class="augment-uses">
                <i class="fas fa-repeat"></i> {{localize "PF1-Psionics.Augments.MaxUses"}}: {{this.maxUses}}
              </div>
            {{/if}}
          </div>
        </li>
      {{/each}}
    </ol>
  {{else}}
    <p class="no-augments">
      <em>{{localize "PF1-Psionics.Augments.NoneDefined"}}</em>
    </p>
  {{/if}}

  <footer class="augments-footer">
    <p class="help-text">
      <i class="fas fa-info-circle"></i>
      {{localize "PF1-Psionics.Augments.HelpText"}}
    </p>
  </footer>
</div>

