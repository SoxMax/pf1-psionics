<div class="form-group flexrow subschool">
  <label>{{localize "PF1.Subschool"}}</label>
  <div class="form-fields">
    <ul class="traits-list tag-list">
      {{#each subdiscipline.selected}}
        <li class="tag subdiscipline-{{@key}}">{{this}}</li>
      {{/each}}
    </ul>
    <a class="trait-selector" data-action="editTraits" data-title="PF1.Subschool" data-for="system.subdiscipline" data-options="subdiscipline" data-school={{system.discipline}}><i class="fa-solid fa-edit" inert></i></a>
  </div>
</div>
